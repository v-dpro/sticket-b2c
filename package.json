{
  "name": "sticket-app",
  "private": true,
  "scripts": {
    "dev:mobile": "cd apps/mobile && npm run start",
    "dev:mobile:go": "cd apps/mobile && npm run start -- --go --clear",
    "dev:mobile:8083": "cd apps/mobile && npm run start -- --clear --port 8083",
    "dev:api": "cd apps/api && npm run dev",
    "dev:api:3001": "cd apps/api && PORT=3001 npm run dev",
    "dev:api:local": "cd apps/api && DATABASE_URL=\"postgresql://$(whoami)@localhost:5432/sticket\" PORT=3001 npm run dev"
  },
  "devDependencies": {
    "@types/react": "~19.1.10",
    "expo": "^54.0.30",
    "expo-dev-client": "^6.0.20",
    "expo-secure-store": "^15.0.8",
    "expo-sqlite": "^16.0.10",
    "expo-web-browser": "^15.0.10",
    "react-native": "^0.81.5",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "@expo/ngrok": "^4.1.3"
  }
}
