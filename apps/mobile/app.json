{
  "expo": {
    "name": "Sticket",
    "slug": "sticket",
    "scheme": "sticket",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#07001F"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.sticket.app",
      "buildNumber": "1",
      "associatedDomains": ["applinks:sticket.in"],
      "infoPlist": {
        "NSCameraUsageDescription": "Sticket needs camera access to scan ticket barcodes",
        "NSPhotoLibraryUsageDescription": "Sticket needs photo access to upload concert photos",
        "NSContactsUsageDescription": "Sticket can help you find friends from your contacts"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#07001F"
      },
      "package": "com.sticket.app",
      "versionCode": 1,
      "permissions": ["CAMERA", "READ_CONTACTS", "VIBRATE"],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "sticket.in",
              "pathPrefix": "/"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-web-browser",
      "@react-native-google-signin/google-signin",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#8B5CF6"
        }
      ],
      "@react-native-community/datetimepicker",
      "expo-barcode-scanner",
      "sentry-expo"
    ],
    "extra": {
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      }
    }
  }
}
